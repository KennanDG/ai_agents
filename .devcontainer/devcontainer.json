{
  "name": "ai_agents-dev",
  "dockerComposeFile": ["../docker-compose.yml"],
  "service": "dev",
  "workspaceFolder": "/workspaces/ai_agents",
  "shutdownAction": "stopCompose",
  "remoteEnv": {
    "ENV_FILE": ".env.docker"
  },
  "postCreateCommand": "apt-get update && apt-get install -y git && python -m pip install -U pip && pip install uv && uv sync --group dev",
  "customizations": {
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": "/workspaces/ai_agents/.venv/bin/python",
        "python.analysis.extraPaths": [
          "/workspaces/ai_agents/src"
        ]
      },
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "charliermarsh.ruff",
        "ms-azuretools.vscode-docker",
        "eamodio.gitlens",
        "ms-python.pytest",
        "redhat.vscode-yaml"
      ]
    }
  }
}
